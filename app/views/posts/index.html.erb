<h1>Ruby on Rails スケジュール管理アプリ</h1>

<h3>スケジュール一覧</h3>
<table>
   <thead>
     <tr>
       <th>ID</th>
       <th>タイトル</th>
       <th>開始日</th>
       <th>終了日</th>
       <th>終日</th>
       <th>スケジュール更新日</th>
       <th>確認</th>
       <th>編集</th>
       <th>削除</th>
     </tr>
   </thead>

<tbody>
     <% @posts.each do |post| %>
       <tr>
         <td><%= post.id %></td>
         <td><%= post.title %></td>
         <td><%= post.starting_date.to_s(:date_jp) %></td>
         <td><%= post.ending_date.to_s(:date_jp) %></td>
         <td>
         <%= post.is_all_day %>
         </td>
         <td><%= post.updated_at.to_s(:datetime_jp) %></td>
         <td><%= link_to "確認", post %></td>
       </tr>
     <% end %>
   </tbody>

  <% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
  <% end %>

 </table>

<p><%= link_to "スケジュール新規登録",:new_post %></p>
